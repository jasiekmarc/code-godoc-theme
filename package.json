{
  "name": "godoc-vscode-theme",
  "displayName": "Godoc Theme",
  "description": "Minimalistic themes for VS Code based on pkg.go.dev.",
  "type": "module",
  "engines": {
    "vscode": "^1.43.0"
  },
  "categories": [
    "Themes"
  ],
  "keywords": [
    "theme",
    "light",
    "dark"
  ],
  "contributes": {
    "themes": [
      {
        "label": "Go Doc Light",
        "uiTheme": "vs",
        "path": "./themes/light-color-theme.json"
      },
      {
        "label": "Go Doc Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/dark-color-theme.json"
      }
    ]
  },
  "devDependencies": {
    "nodemon": "^3.0.3",
    "vsce": "^2.15.0"
  },
  "scripts": {
    "start": "nodemon --watch src src/index.js",
    "prebuild": "mkdir -p release && find release -mindepth 1 -not -name .git -print -delete",
    "build": "node src/index.js",
    "postbuild": "cp -r {package/.,themes} release/",
    "clean": "rm -r release/ themes/"
  }
}
